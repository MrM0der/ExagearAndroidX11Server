<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeDarkNoTitleFullscreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ThemeDefault" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="ThemeDefaultDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="ThemeDefaultDialogNoTitle" parent="@style/ThemeDefaultDialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeDefaultFullscreen" parent="@style/ThemeDefault">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ThemeDialogDarkNoTitle" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeDialogNoTitle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeNoTitleFullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
